@{string type = ViewData["type"].ToString();}
<head>
    <script type="text/javascript">
        function changTab(tab) {
            if (tab == 1) {
                document.getElementById("AboutTab1").className = "tab_li_L_active";
                document.getElementById("AboutTab2").className = "tab_li_M";
                document.getElementById("AboutTab3").className = "tab_li_M";
                document.getElementById("AboutTab4").className = "tab_li_R";

                document.getElementById("content1").style.display = "block";
                document.getElementById("content2").style.display = "none";
                document.getElementById("content3").style.display = "none";
                document.getElementById("showCenter").innerHTML = "企业沿革";
                
            }
            else if (tab == 2) {
                document.getElementById("AboutTab1").className = "tab_li_L";
                document.getElementById("AboutTab2").className = "tab_li_M";
                document.getElementById("AboutTab3").className = "tab_li_M_active";
                document.getElementById("AboutTab4").className = "tab_li_R";

                document.getElementById("content1").style.display = "none";
                document.getElementById("content2").style.display = "block";
                document.getElementById("content3").style.display = "none";
                document.getElementById("showCenter").innerHTML = "新闻中心";
            }
            else {
                document.getElementById("AboutTab1").className = "tab_li_L";
                document.getElementById("AboutTab2").className = "tab_li_M";
                document.getElementById("AboutTab3").className = "tab_li_M";
                document.getElementById("AboutTab4").className = "tab_li_R_active";

                document.getElementById("content1").style.display = "none";
                document.getElementById("content2").style.display = "none";
                document.getElementById("content3").style.display = "block";
                document.getElementById("showCenter").innerHTML = "学术交流机构";
            }
        }
    </script>
</head>
<div class="content">
    <div class="box_960">
        <div class="box_660 color_333">
            <div class="breadcrumb">
                <a href="@Url.Action("Index", "Home")">Home</a><span> / </span><span id="showCenter">企业沿革</span></div>
            <ul class="tab_ul">
                <li id="AboutTab1" class="tab_li_L_active" style="width: 25%" onclick="changTab(1);">
                <span class="tab_li_span" style="cursor:pointer">企业沿革</span></li>
                <li id="AboutTab2" class="tab_li_M" style="width: 25%"><span class="tab_li_span">
                <a href="http://www.vipabc.com/program/campaign/2011prize/index.htm" target="_blank" style="cursor:pointer">企业荣耀</a></span></li>
                <li id="AboutTab3" class="tab_li_M" style="width: 25%" onclick="changTab(2);">
                    <span class="tab_li_span" style="cursor:pointer">新闻中心</span></li>
                <li id="AboutTab4" class="tab_li_R" style="width: 25%" onclick="changTab(3);">
                <span class="tab_li_span" style="cursor:pointer">学术交流机构</span>
                </li>
            </ul>
            <!-- #############企业沿革################ -->
            <div id="content1" style="display: block;">
                <iframe frameborder="0" height="100%" width="100%"  scrolling="no"
                    src="@Url.Content("~/About/History")" style="height:1750px;"></iframe>
            </div>
            <!-- #############企业沿革################ -->
            <!-- #############新闻页面################ -->
            <div id="content2" style="display: none;">
                <iframe frameborder="0" height="100%" width="100%"  scrolling="no"
                    src="@Url.Content("~/About/NewsList")" style="height:1250px;"></iframe>
            </div>
            <!-- #############新闻页面################ -->
            <!-- #############学术交流机构################ -->
            <div id="content3" style="display: none;">
                <iframe frameborder="0" height="100%" width="100%" scrolling="no"
                    src="@Url.Content("~/About/AcademicAffiliates")" style="height:1100px;"></iframe>
            </div>
            <!-- #############学术交流机构################ -->
        </div>
    </div>
</div>
 <script type="text/javascript">
        changTab(@type);
</script>

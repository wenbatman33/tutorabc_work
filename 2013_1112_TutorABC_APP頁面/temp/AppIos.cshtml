<style type="text/css">
    .appCarouselUL {}
    .appCarouselUL li{ position:relative; float:left; margin-left:10px; top:0px; width:100%;}
    .prevBtn { display:inline-block; position:absolute; top:146px; left:90px;  width:26px; height:84px;background:url(@Url.Content("~/images/prevBtn.png")) no-repeat;}
    .nextBtn { display:inline-block; position:absolute; top:146px; left:750px; width:26px; height:84px;background:url(@Url.Content("~/images/nextBtn.png")) no-repeat;}
    .appPointBtns{width:100%;  height:20px; text-align:center;}

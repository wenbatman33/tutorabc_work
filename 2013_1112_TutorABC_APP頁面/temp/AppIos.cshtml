    .ponitHit{ display:inline-block; width:10px; height:10px; background:url(@Url.Content("~/images/appCarouse_point_click.png")); margin:0px;}
    .ponitIcon{ display:inline-block; width:10px; height:10px; background:url(@Url.Content("~/images/appCarouse_point.png")); margin:0px; }
</style>
<script type="text/javascript">  
    $(function(){
	    var $block = $('.appCarousel'),
	    $slides = $block.find('.slides'),
	    $ul = $slides.find('ul'),
	    $PointBtns = $('.appPointBtns'),
	    totalPic=$('.slides li').length
	    _width = 666,
	    totalWidth=totalPic*110,
	    timer=100, _stop = false, nowNum=0,currentx=0, btnOver=false,
	    totalFrames=Math.ceil(totalWidth/_width);
	    for(var i=0;i<totalFrames;i++){
		    $PointBtns.append( "<a href=\"javascript: void(0)\" onclick=\"javascript: roll("+i+")\" ><span class=\"ponitIcon\"></span></a>" );
	    }
	    $('.prevBtn').hover(
		      function() {
			    $( this ).css( "top","150px" );
		      }, function() {
			    $( this ).css( "top","146px" );
		      }
	    );
	    $('.nextBtn').hover(
		      function() {
			    $( this ).css( "top","150px" );
		      }, function() {
			    $( this ).css( "top","146px" );
		      }
	    );
	
	    $('.prevBtn').click( function(){ prv(); });
	    $('.nextBtn').click( function(){ next(); });
	
	    roll(nowNum);

			
    });

    function next(){
	    if(nowNum >=(totalFrames-1)){
		    nowNum=totalFrames;
	    }else{
		    nowNum+=1;
		    roll(nowNum);
	    }
    }
    function prv(){
	    if(nowNum<=0){
		    nowNum=0;	
	    }else{
		    nowNum-=1;
		    roll(nowNum);
	    }
    }

    function roll(num){
	    nowNum=num
	    if(num<=0){
		    $('.prevBtn').hide();
	    }else{
		    $('.prevBtn').show();
	    }
	    if(num>=(totalFrames-1)){
		    $('.nextBtn').hide();
	    }else{
		    $('.nextBtn').show();
	    }
	    currentx=0-num*_width;
	    var str= currentx+"px";
	    $('.ponitHit').removeClass().addClass("ponitIcon");
	    $('.appPointBtns a').eq(num).find('span').removeClass("ponitIcon").addClass("ponitHit");
	    $(".slides").stop().animate({ left: str }, 300 );
    };
</script>

